{
	"version": 3,
	"routes": [
		{
			"src": "^/_astro/(.*)$",
			"headers": {
				"cache-control": "public, max-age=31536000, immutable"
			},
			"continue": true
		},
		{
			"handle": "filesystem"
		},
		{
			"src": "^\\/_image$",
			"dest": "_render"
		},
		{
			"src": "^\\/$",
			"dest": "_render"
		}
	],
	"images": {
		"sizes": [
			500,
			640,
			750,
			828,
			1080,
			1200,
			1920,
			2048,
			3840
		],
		"domains": [
			"placeholder.com"
		],
		"remotePatterns": [
			{
				"protocol": "https",
				"hostname": "^via\\.placeholder\\.com$",
				"pathname": "^/500x500/.*$"
			}
		]
	}
}